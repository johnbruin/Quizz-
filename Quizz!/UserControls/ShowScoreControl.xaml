<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Quizz_.ShowScoreControl"
	x:Name="ucShowScoreControl">
    <StackPanel Width="Auto" Height="Auto">
		<Label Width="Auto" Height="Auto" Content="YOUR SCORES" Foreground="White" FontSize="36" FontWeight="Bold" Margin="20" HorizontalAlignment="Center" />
		<StackPanel x:Name="stackShowScores" Orientation="Horizontal" Width="Auto" Height="Auto"/>
		<Button x:Name="buttonClose" Style="{DynamicResource AnswerButton}" BorderBrush="Red" Content="CLOSE" Foreground="White" FontWeight="Bold" FontSize="12" Margin="20" Click="ButtonClose_Click" Width="82.833" Height="45.96" />
	</StackPanel>
</UserControl>
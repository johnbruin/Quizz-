<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Quizz_.Intermezzo"
	x:Name="ucIntermezzo"
	>

	<StackPanel x:Name="LayoutRoot">
		<Label Content="WHO HAS THE BOMB?" FontSize="36" FontWeight="Bold" Foreground="#FFFFFFFF" x:Name="Title"/>
		<TextBlock Text="TRY TO LOSE THE BOMB AS SOON AS POSSIBLE BY GIVING THE RIGHT ANSWER" TextWrapping="Wrap" Foreground="#FFFFFFFF" FontSize="24" Width="Auto" Height="Auto" Margin="10" x:Name="Line1"/>
		<TextBlock Text="IF THE BOMB EXPLODES IN YOUR HANDS YOU WILL LOSE 400 POINTS" TextWrapping="Wrap" Foreground="#FFFFFFFF" FontSize="24" Width="Auto" Height="Auto" Margin="10" x:Name="Line2"/>
        <Button x:Name="buttonStart" Style="{DynamicResource AnswerButton}" BorderBrush="Red" Content="START" Foreground="#FFF7F0F0" Width="90" FontWeight="Bold" FontSize="12" Click="ButtonSelect_Click" />
	</StackPanel>
</UserControl>
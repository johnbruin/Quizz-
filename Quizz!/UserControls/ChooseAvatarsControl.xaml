<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Quizz_.ChooseAvatarsControl"
	x:Name="ucChooseAvatarsControl"
    xmlns:Quizz_="clr-namespace:Quizz_"
	Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto">
    <StackPanel Orientation="Vertical">
		<Label Content="CHOOSE YOUR PICTURE" Foreground="White" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,19"/>
		<StackPanel Orientation="Horizontal" Width="Auto" OpacityMask="#FF000000">
	        <Quizz_:ChooseAvatarControl x:Name="avatarPlayer1" />
	        <Quizz_:ChooseAvatarControl x:Name="avatarPlayer2" />
	        <Quizz_:ChooseAvatarControl x:Name="avatarPlayer3" />
	        <Quizz_:ChooseAvatarControl x:Name="avatarPlayer4" />
	    </StackPanel>
	</StackPanel>
</UserControl>
